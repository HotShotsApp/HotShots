<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.HotShots" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_fore_animated</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">800</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.HotShots</item>
    </style>
</resources>